    <resultMap id="getListWithAttrMap" type="com.easy.micro.dto.PmsProductAttributeCategoryItem" >
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="attribute_count" jdbcType="INTEGER" property="attributeCount" />
        <result column="param_count" jdbcType="INTEGER" property="paramCount" />
        <collection property="productAttributeList" columnPrefix="attr_" resultMap="com.easy.micro.mapper.PmsProductAttributeMapper.BaseResultMap">
        </collection>
    </resultMap>
    <select id="getListWithAttr" resultMap="getListWithAttrMap">
        SELECT
            pac.id,
            pac.name,
            pa.id attr_id,
            pa.name attr_name
        FROM
            pms_product_attribute_category pac
            LEFT JOIN pms_product_attribute pa ON pac.id = pa.product_attribute_category_id
        AND pa.type=1;
    </select>
</mapper>